<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.puckman.ololo.puckman">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameView"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game_view"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".OptionsScreen" />
        <activity
            android:name=".AboutScreen"
            android:label="@string/title_activity_about_screen"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.puckman.ololo.puckman.MainActivity" />
        </activity>
        <activity android:name=".OptionsActivity" />
        <activity android:name=".AboutActivity"></activity>
    </application>

</manifest>